{
  "name": "sistema-studio-winner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "author": {
    "email": "lucas.ci25@hotmail.com",
    "name": "Lucas Rafael Cipriani"
  },
  "scripts": {
    "dev": "vite",
    "electron": "nodemon --exec electron electron/main.js",
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-installer": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.studiowinner.instalador",
    "productName": "Sistema Studio Winner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/",
      "build/",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/logo-win.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@tabler/icons-react": "^3.30.0",
    "@tailwindcss/vite": "^4.0.6",
    "clsx": "^2.1.1",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-modal": "^3.16.3",
    "react-router": "^7.1.5",
    "react-text-mask": "^5.5.0",
    "react-toastify": "^11.0.3",
    "react-use": "^17.6.0",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "text-mask-addons": "^3.8.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.19.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^34.1.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "nodemon": "^3.1.9",
    "vite": "^6.1.0"
  }
}
